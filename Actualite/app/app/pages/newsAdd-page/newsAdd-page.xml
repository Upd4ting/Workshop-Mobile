<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <StackLayout class="p-20">
        <Label text="Ajout d'une nouveauté" class="h3 text-center" textWrap="true"/>
		<TextField hint="Titre" Autocapitalization="none" text="{{ title }}" secure="false" autocorrect="false" maxLength="30" class="input input-rounded m-20 p-x-20 uppercase "></TextField>
		<TextField hint="Description courte" Autocapitalization="none" text="{{ short_desc }}" secure="false" autocorrect="false" maxLength="30" class="input input-rounded m-20 p-x-20 uppercase "></TextField>
		<TextField hint="Description" Autocapitalization="none" text="{{ desc }}" secure="false" autocorrect="false" maxLength="30" class="input input-rounded m-20 p-x-20 uppercase "></TextField>
        <Button text="Ajouter" tap="{{ onAdd }}" class="btn btn-primary btn-active"/>
		<Button text="Retourner à la liste" tap="{{ goNews }}" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>
